<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sputnik1973.myfirstapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.AppCompat.Dialog.MinWidth">
        <activity android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayMessageActivity"
            android:theme="@style/Base.Theme.AppCompat.Dialog"
            />
        <activity android:name=".DisplayMessageActivity2"></activity>
    </application>
    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="23" />
</manifest>